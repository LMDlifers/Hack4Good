{
  "compilerOptions": {
    "target": "esnext", 
    "module": "esnext", 
    "baseUrl": "./", 
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "allowJs": true, 
    "checkJs": false, 
    "jsx": "preserve", 
    "strict": true 
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules", "dist"]
}
